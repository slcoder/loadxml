@model List<WebApplication2.Models.ViewModels.ProductViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.PageTitle</h2>

<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-md-4">
            <div>Product Id : @item.ProductId</div>
            <h4>@Html.ActionLink(item.ProductName, "ProductDetails", new { Id = item.ProductId })</h4>

            <div>
                <img src="@item.ProductImage" width="250px" height="150px" />
            </div>
            <div class="label-price">
                $@item.ProductCost
                <span class="more-info">@Html.ActionLink("More info", "ProductDetails", new { Id = item.ProductId })</span>
            </div>
            <hr />
        </div>
    }
</div>


